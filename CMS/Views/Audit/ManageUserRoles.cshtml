@using CMS.ViewModels

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("Components/Partials/_Topbar")

@model UserRolesViewModel


<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Role Management</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h5 class="m-0 font-weight-bold">Edit role of (@Model.Email)</h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4">
                Please select a single role for this user before clicking <strong>Update Role</strong>.
            </p>
            <form asp-action="ManageUserRoles" method="post">
                <input type="hidden" asp-for="UserId" />
                <table class="table" id="dataTable">
                    <thead>
                        <tr><th>Role</th><th>Assigned</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <tr>
                                <td>@Model.Roles[i].RoleName</td>
                                <td>
                                    <input type="radio"
                                           name="SelectedRole"
                                           value="@Model.Roles[i].RoleName"
                                    @(Model.Roles[i].IsSelected ? "checked" : "") />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                  <div class="form-group mt-4 d-flex justify-content-between flex-row-reverse">
                    <button type="submit" class="btn btn-primary">Update Role</button>
                    <a asp-action="UserList" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>

        </div>
    </div>
</div>
