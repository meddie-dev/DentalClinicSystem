@model CMS.Models.Billing

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Topbar -->
@Html.Partial("Components/Partials/_Topbar")

<div class="container-fluid">
	<!-- Page Heading -->
	<div class="d-sm-flex align-items-center justify-content-between mb-4 ">
		<h1 class="h3 mb-0 text-gray-800">Payment Records</h1>
	</div>

	<div class="card shadow mb-4">
		<div class="card-header py-3 bg-primary text-white">
			<h5 class="m-0 font-weight-bold">Payment Details</h5>
		</div>
		<div class="card-body">
			<p><strong>Patient:</strong> @Model.Patient.FullName</p>
			<p><strong>Total Billed:</strong> @Model.TotalAmount.ToString("C")</p>


			<table class="table">
				<thead>
					<tr>
						<th>Amount Paid</th>
						<th>Date</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var payment in Model.Payments)
					{
						<tr>
							<td>@payment.AmountPaid.ToString("C")</td>
							<td>@payment.PaymentDate.ToShortDateString()</td>
						</tr>
					}
				</tbody>
			</table>

			<div class="d-flex justify-content-between mt-4">
				<a asp-action="Index" class="btn btn-outline-secondary">
					<i class="fas fa-arrow-left"></i> Back to List
				</a>
			</div>
		</div>
	</div>
</div>



